<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellersRegistritionActivity">

    <ImageView
        android:id="@+id/image_sellers"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/sellerlogin"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_login_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  تسجيل دخول البائعين"
        android:gravity="center"
        android:layout_below="@id/image_sellers"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/seller_login__email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/title_login_seller"
        android:hint="البريد الالكتروني"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/seller_login__password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_login__email"
        android:hint="كلمه المرور "
        android:inputType="number"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/seller_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_login__password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#3BC9DC"
        android:text="تسجيل "
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textColor="@color/white"
        />






</RelativeLayout>